# Grafana â€” DNS points to Tailscale IP, so only VPN clients can reach this
http://grafana.potential2actual.com {
    reverse_proxy grafana:3000

    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
    }

    log {
        output stdout
        format json
    }
}

{$DOMAIN:mesh.potential2actual.com} {
    # NATS WebSocket endpoint
    handle_path /nats {
        reverse_proxy nats:9222
    }

    # Mesh Dashboard
    handle {
        reverse_proxy dashboard:3000
    }

    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    log {
        output stdout
        format json
    }
}
