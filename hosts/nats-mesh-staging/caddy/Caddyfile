{$DOMAIN:mesh.potential2actual.com} {
    # NATS WebSocket endpoint
    handle_path /nats {
        reverse_proxy nats:9222
    }

    # Grafana (serve_from_sub_path=true, keep /grafana prefix)
    handle /grafana/* {
        reverse_proxy grafana:3000
    }
    handle /grafana {
        redir /grafana/ permanent
    }

    # Mesh Dashboard
    handle {
        reverse_proxy dashboard:3000
    }

    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    log {
        output stdout
        format json
    }
}
